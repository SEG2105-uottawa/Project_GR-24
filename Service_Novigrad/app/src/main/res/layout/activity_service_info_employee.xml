<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.branchEmployee.ServiceInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service_info_employee_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/placeholder"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/service_info_employee_del"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.3"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/delete" />

        </LinearLayout>

            <TextView
                android:id="@+id/service_info_employee_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/placeholder"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/service_info_employee_form_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/form_fields"
                android:textSize="18sp"
                android:textStyle="bold" />

        <ListView
            android:id="@+id/service_info_employee_form_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </ListView>

            <TextView
                android:id="@+id/service_info_employee_doc_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/document_types"
                android:textSize="18sp"
                android:textStyle="bold" />

        <ListView
            android:id="@+id/service_info_employee_doc_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </ListView>

    </LinearLayout>
</RelativeLayout>