<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.servicenovigrad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".destinations.AdminHomePage"></activity>
        <activity android:name=".ui.MainPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegisterPage"
            android:parentActivityName=".ui.MainPage">

            <!-- The meta-data tag is required for API 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainPage" />
        </activity>
        <activity
            android:name=".ui.LoginPage"
            android:parentActivityName=".ui.MainPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainPage" />
        </activity>
        <activity
            android:name=".destinations.CustomerHomePage"
            android:parentActivityName=".ui.LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.LoginPage" />
        </activity>
        <activity
            android:name=".destinations.BranchEmployeeHomePage"
            android:parentActivityName=".ui.LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.LoginPage" />
        </activity>
        <activity
            android:name=".ui.RegisterBranchEmployee"
            android:parentActivityName=".ui.RegisterPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.RegisterPage" />
        </activity>
        <activity
            android:name=".ui.RegisterCustomer"
            android:parentActivityName=".ui.RegisterPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.RegisterPage" />
        </activity>
    </application>

</manifest>