<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.servicenovigrad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".destinations.AdminHomePage" />
        <activity android:name=".destinations.CustomerHomePage"/>
        <activity android:name=".destinations.BranchEmployeeHomePage" />
        <activity android:name=".ui.RegisterPage"
            android:parentActivityName=".ui.MainPage"/>
        <activity android:name=".ui.LoginPage"
            android:parentActivityName=".ui.MainPage"/>
        <activity android:name=".ui.RegisterBranchEmployee"
            android:parentActivityName=".ui.RegisterPage"/>
        <activity android:name=".ui.RegisterCustomer"
            android:parentActivityName=".ui.RegisterPage"/>
        <activity android:name=".ui.AdminEditBranchAccounts"
             android:parentActivityName=".destinations.AdminHomePage"/>
        <activity android:name=".ui.AdminEditServices"
            android:parentActivityName=".ui.AdminEditBranchAccounts"/>
        <activity android:name=".ui.AdminEditCustomerAccounts"
            android:parentActivityName=".destinations.AdminHomePage"/>
    </application>

</manifest>