<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.servicenovigrad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPage"
            android:parentActivityName=".MainPage">

            <!-- The meta-data tag is required for API 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainPage" />
        </activity>
        <activity
            android:name=".LoginPage"
            android:parentActivityName=".MainPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainPage" />
        </activity>
        <activity
            android:name=".WelcomePage"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginPage" />
        </activity>
        <activity android:name=".RegisterBranchEmployee"
            android:parentActivityName=".RegisterPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RegisterPage" />
        </activity>
        <activity android:name=".RegisterCustomer"
            android:parentActivityName=".RegisterPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RegisterPage" />
        </activity>
    </application>

</manifest>